@model IEnumerable<Genre>

@{
    ViewData["Title"] = "Жанри";
}

<h1>Жанри</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success" id="create-genre-btn">+ Додати жанр</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover" id="genres-table">
        <thead class="table-dark">
            <tr>
                <th>Назва жанру</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-genre-id="@item.Id">
                    <td class="genre-name">@item.Name</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Деталі</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редагувати</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Видалити</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info" id="no-genres-message">
        Жанри не знайдено. <a asp-action="Create">Додайте перший жанр!</a>
    </div>
}
