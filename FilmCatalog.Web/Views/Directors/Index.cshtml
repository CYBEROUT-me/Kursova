@model IEnumerable<Director>

@{
    ViewData["Title"] = "Режисери";
}

<h1>Режисери</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success" id="create-director-btn">+ Додати режисера</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover" id="directors-table">
        <thead class="table-dark">
            <tr>
                <th>Ім'я</th>
                <th>Країна</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-director-id="@item.Id">
                    <td class="director-name">@item.Name</td>
                    <td class="director-country">@(item.Country ?? "Не вказано")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Деталі</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редагувати</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Видалити</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info" id="no-directors-message">
        Режисери не знайдено. <a asp-action="Create">Додайте першого режисера!</a>
    </div>
}
