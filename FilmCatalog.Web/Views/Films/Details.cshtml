@model Film

@{
    ViewData["Title"] = "Деталі фільму";
}

<h1 id="film-title">@Model.Title</h1>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Назва</dt>
            <dd class="col-sm-9" id="detail-title">@Model.Title</dd>

            <dt class="col-sm-3">Рік випуску</dt>
            <dd class="col-sm-9" id="detail-year">@Model.Year</dd>

            <dt class="col-sm-3">Опис</dt>
            <dd class="col-sm-9" id="detail-description">@(Model.Description ?? "Опис відсутній")</dd>

            <dt class="col-sm-3">Рейтинг</dt>
            <dd class="col-sm-9" id="detail-rating">
                @if (Model.Rating.HasValue)
                {
                    <span class="badge bg-warning text-dark fs-5">⭐ @Model.Rating.Value.ToString("F1")</span>
                }
                else
                {
                    <span class="text-muted">Не вказано</span>
                }
            </dd>

            <dt class="col-sm-3">Жанр</dt>
            <dd class="col-sm-9" id="detail-genre">@Model.Genre?.Name</dd>

            <dt class="col-sm-3">Режисер</dt>
            <dd class="col-sm-9" id="detail-director">@Model.Director?.Name</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Редагувати</a>
    <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Видалити</a>
</div>
