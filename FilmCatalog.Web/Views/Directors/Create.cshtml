@model Director

@{
    ViewData["Title"] = "Додати режисера";
}

<h1>Додати нового режисера</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" id="create-director-form">
            <div asp-validation-summary="ModelOnly" class="text-danger validation-summary"></div>
            
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" id="director-name" />
                <span asp-validation-for="Name" class="text-danger field-validation"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Country" class="form-label"></label>
                <input asp-for="Country" class="form-control" id="director-country" />
                <span asp-validation-for="Country" class="text-danger field-validation"></span>
            </div>
            
            <div class="mb-3">
                <button type="submit" class="btn btn-primary" id="submit-btn">Створити</button>
                <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
