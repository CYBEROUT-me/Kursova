@model Director

@{
    ViewData["Title"] = "Деталі режисера";
}

<h1 id="director-title">@Model.Name</h1>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Ім'я</dt>
            <dd class="col-sm-9" id="detail-name">@Model.Name</dd>

            <dt class="col-sm-3">Країна</dt>
            <dd class="col-sm-9" id="detail-country">@(Model.Country ?? "Не вказано")</dd>

            <dt class="col-sm-3">Кількість фільмів</dt>
            <dd class="col-sm-9" id="detail-films-count">@(Model.Films?.Count ?? 0)</dd>
        </dl>

        @if (Model.Films != null && Model.Films.Any())
        {
            <h4>Фільмографія:</h4>
            <ul id="director-films-list">
                @foreach (var film in Model.Films)
                {
                    <li>
                        <a asp-controller="Films" asp-action="Details" asp-route-id="@film.Id">@film.Title</a> (@film.Year)
                    </li>
                }
            </ul>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Редагувати</a>
    <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
</div>
