@model Director

@{
    ViewData["Title"] = "Видалити режисера";
}

<h1 class="text-danger">Видалити режисера</h1>

<div class="alert alert-warning">
    <strong>Увага!</strong> Ви впевнені, що хочете видалити цього режисера?
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Ім'я</dt>
            <dd class="col-sm-9" id="delete-name">@Model.Name</dd>

            <dt class="col-sm-3">Країна</dt>
            <dd class="col-sm-9" id="delete-country">@(Model.Country ?? "Не вказано")</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" id="delete-form" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger" id="confirm-delete-btn">Підтвердити видалення</button>
    <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
</form>
