@model IEnumerable<Film>

@{
    ViewData["Title"] = "Фільми";
}

<h1>Фільми</h1>

<div class="row mb-3">
    <div class="col-md-8">
        <form asp-action="Index" method="get" class="row g-2">
            <div class="col-md-5">
                <input type="text" name="searchString" class="form-control" placeholder="Пошук за назвою..." 
                       value="@ViewBag.SearchString" id="search-input" />
            </div>
            <div class="col-md-4">
                <select name="genreId" class="form-select" id="genre-filter">
                    <option value="">-- Всі жанри --</option>
                    @foreach (var genre in (SelectList)ViewBag.Genres)
                    {
                        <option value="@genre.Value" selected="@(genre.Value == ViewBag.GenreId?.ToString())">@genre.Text</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-outline-primary w-100" id="search-button">Пошук</button>
            </div>
        </form>
    </div>
    <div class="col-md-4 text-end">
        <a asp-action="Create" class="btn btn-success" id="create-film-btn">
            + Додати фільм
        </a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover" id="films-table">
        <thead class="table-dark">
            <tr>
                <th>Назва</th>
                <th>Рік</th>
                <th>Жанр</th>
                <th>Режисер</th>
                <th>Рейтинг</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-film-id="@item.Id">
                    <td class="film-title">@item.Title</td>
                    <td class="film-year">@item.Year</td>
                    <td class="film-genre">@item.Genre?.Name</td>
                    <td class="film-director">@item.Director?.Name</td>
                    <td class="film-rating">
                        @if (item.Rating.HasValue)
                        {
                            <span class="badge bg-warning text-dark">⭐ @item.Rating.Value.ToString("F1")</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Деталі</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редагувати</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Видалити</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info" id="no-films-message">
        Фільми не знайдено. <a asp-action="Create">Додайте перший фільм!</a>
    </div>
}
